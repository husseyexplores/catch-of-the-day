/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform: translatex(-120%)
  transition: all 250ms
  max-height: 0
  padding: 0 !important
  &.order-enter-active
    transform: translatex(0)
    max-height: 60px
    padding: 2rem 0 !important


.order-exit
  transform: translatex(0)
  transition: 250ms
  max-height: 60px
  padding: 2rem 0 !important
  &.order-exit-active
    transform: translatex(120%)
    max-height: 0
    padding: 0 !important

.count-enter
  transition: 250ms
  transform: translateY(100%)
  &.count-enter-active
    transform: translateY(0)

.count-exit
  transition: 250ms
  transform: translateY(0)
  position: absolute
  left: 0
  bottom: 0
  &.count-exit-active
    transform: translateY(-100%)